    <!--
        Client
    -->
    <changeSet id="1" author="radek">
        <createTable tableName="client">
            <column name="id" type="varchar(100)" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="watson_apikey" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="watson_assistant_id" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="watson_url" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="watson_version" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>

